{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/post/:id", "destination": "/index.js" },
    { "source": "/api/:path*", "destination": "/index.js" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}